<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:background="#F7DFA1"
    tools:context=".device_activate.ConnectSucceedActivity">

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:contentDescription="@string/connect_success"
        android:src="@drawable/connect_fail"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="164dp"
        android:id="@+id/imageView2" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="有点问题"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:id="@+id/textView" />
    <Button
        android:id="@+id/try_again_button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="再试一次"
        android:textSize="25sp"
        android:textColor="@color/white"

        android:background="@drawable/try_again_button_background"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp" />

</RelativeLayout>
