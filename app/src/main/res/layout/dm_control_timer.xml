<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical">

    <include
        android:id="@+id/include_actionbar"
        layout="@layout/layout_actionbar" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/eclipse_shape_left"
            android:text="定时开"
            android:padding="5dp"
            android:id="@+id/timer_on" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/eclipse_shape_right_unfilled"
            android:text="定时关"
            android:padding="5dp"
            android:id="@+id/timer_off" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:text="任务时间"/>

    <zhuoning.youthlife.cn.zhuoning.cn.youthlife.zhuoning.widgets.CustomTimePicker
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/timepicker" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:text="重复"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="42dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/eclipse_shape_rect_unfilled"
            android:layout_weight="1"
            android:text="日"
            android:id="@+id/sun"
            android:gravity="center" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/eclipse_shape_rect_unfilled"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/mon"
            android:text="一"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/eclipse_shape_rect_unfilled"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/thu"
            android:text="二"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/eclipse_shape_rect_unfilled"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/thr"
            android:text="三"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/eclipse_shape_rect_unfilled"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/wen"
            android:text="四"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/eclipse_shape_rect_unfilled"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/fri"
            android:text="五"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/eclipse_shape_rect_unfilled"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/sat"
            android:text="六"/>
    </LinearLayout>

</LinearLayout>