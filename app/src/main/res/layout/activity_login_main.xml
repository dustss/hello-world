<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5ca0a6"
    android:orientation="vertical"
    android:weightSum="20"
    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="7"
        android:gravity="center_vertical|center_horizontal"
        android:paddingBottom="32dp"
        android:paddingTop="56dp"
        android:text="卓宁小控"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/login_name"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@color/transparent_25"
        android:gravity="center"
        android:hint="请输入手机号"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/login_pass"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        android:layout_weight="3"
        android:background="@color/transparent_25"
        android:gravity="center"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:textSize="12sp" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="335dp"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:layout_marginTop="36dp"
        android:layout_weight="3"
        android:background="@drawable/log_in_button"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:text="登录" />

    <TextView
        android:id="@+id/forget_password_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:text="忘记密码"
        android:textSize="10sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/qq"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="18dp"
            android:background="@drawable/qq" />

        <ImageButton
            android:id="@+id/wechat"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="18dp"
            android:background="@drawable/wechat" />

        <ImageButton
            android:id="@+id/weibo"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="18dp"
            android:background="@drawable/weibo" />

    </LinearLayout>

    <TextView
        android:id="@+id/create_account_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="36dp"
        android:text="创建账户"
        android:textColor="@color/white" />


</LinearLayout>