<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#46c2d2"
    android:layout_width="match_parent" android:layout_height="match_parent">

<TextView
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:text="与设备共享您的wifi"
    android:textSize="20sp"
    android:textColor="@color/white"
    android:gravity="center"
    android:layout_marginTop="90dp"
    />
    <TextView
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/wifi_ssid_text_view"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_above="@+id/wifi_password_edit_text"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="38dp" />

    <EditText
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="请输入您的wifi密码"
        android:id="@+id/wifi_password_edit_text"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="确定"
        android:id="@+id/share_wifi_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/wifi_password_edit_text" />

</RelativeLayout>